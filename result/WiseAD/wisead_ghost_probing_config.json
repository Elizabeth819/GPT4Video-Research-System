{
  "system_info": {
    "name": "WiseAD A100 Ghost Probing Detection",
    "version": "1.0",
    "description": "使用WiseAD YOLO模型进行鬼探头检测",
    "created_date": "2025-07-16"
  },
  "processing_config": {
    "max_videos": 100,
    "azure_storage_container": "dada-videos",
    "frame_analysis_interval": 3,
    "batch_size": 4,
    "video_pattern": "images_[1-5]_XXX.avi"
  },
  "wisead_model_config": {
    "model_type": "yolov8s",
    "confidence_threshold": 0.5,
    "device": "cuda",
    "memory_optimization": true,
    "a100_optimized": true
  },
  "ghost_detection_rules": {
    "sudden_appearance_threshold": 0.7,
    "proximity_danger_distance": 50,
    "speed_change_threshold": 0.8,
    "unexpected_movement_score": 0.6,
    "ghost_detection_sensitivity": "high"
  },
  "target_classes": {
    "ghost_probing_relevant": [
      "person", "bicycle", "car", "motorcycle", "bus", "truck",
      "traffic light", "stop sign", "parking meter"
    ],
    "high_risk_classes": ["person", "bicycle", "motorcycle"],
    "vehicle_classes": ["car", "bus", "truck"]
  },
  "analysis_parameters": {
    "pixel_distance_threshold": 100,
    "area_change_ratio_threshold": 0.5,
    "frame_width_assumption": 640,
    "frame_height_assumption": 480,
    "vehicle_position_ratio": 0.8
  },
  "output_format": {
    "structure": "wisead_ghost_analysis",
    "filename_pattern": "wisead_ghost_{video_id}.json",
    "summary_report": true,
    "detailed_frame_analysis": true
  },
  "azure_ml_config": {
    "compute_target": "wisead-a100-lowpri",
    "environment": "AzureML-ACPT-pytorch-1.13-py38-cuda11.7-gpu:10",
    "gpu_optimization": true,
    "storage_integration": true,
    "local_inference": true
  },
  "performance_settings": {
    "gpu_memory_fraction": 0.8,
    "torch_cudnn_benchmark": true,
    "torch_cuda_empty_cache": true,
    "progress_report_interval": 100
  },
